<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="serial_no"/>

    <include file="$(find-pkg-share kinova_vision)/launch/kinova_vision.launch.py">
      <arg name="camera" value="wrist_camera"/>
      <arg name="depth_registration" value="true"/>
      <arg name="max_color_pub_rate" value="6.0"/>
      <arg name="max_depth_pub_rate" value="6.0"/>
    </include>
    <node pkg="realsense2_camera" exec="realsense2_camera_node" name="scene_camera" namespace="scene_camera">
      <param name="camera_name" value="scene_camera"/>
      <param name="serial_no" value="$(var serial_no)"/>,
      <param name="pointcloud.enable" value="False"/>,
      <param name="device_type" value="D415"/>
      <param name="base_frame_id" value="scene_camera_link"/>
      <param name="depth_module.profile" value="640x480x6"/> <!--format: width x height x framerate -->
      <param name="rgb_camera.profile" value="640x480x6"/> <!--format: width x height x framerate -->
      <param name="pointcloud.ordered_pc" value="True"/>
      <param name="decimation_filter.enable" value="False"/>
      <!-- QoS settings -->
      <param name="color_qos" value="SENSOR_DATA"/>
      <param name="depth_qos" value="SENSOR_DATA"/>
    </node>
</launch>
