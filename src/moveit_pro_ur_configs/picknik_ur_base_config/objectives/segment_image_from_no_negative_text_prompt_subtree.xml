<?xml version="1.0" encoding="utf-8" ?>
<root
  BTCPP_format="4"
  main_tree_to_execute="Segment Image from No Negative Text Prompt Subtree"
>
  <!--//////////-->
  <BehaviorTree
    ID="Segment Image from No Negative Text Prompt Subtree"
    _subtreeOnly="true"
    _description="Run text based segmentation and visualize the masks."
    _favorite="true"
  >
    <Control ID="Sequence">
      <Action
        ID="GetImage"
        timeout_sec="5.000000"
        topic_name="{topic_name}"
        message_out="{image}"
      />
      <Action
        ID="GetMasks2DFromTextQuery"
        image="{image}"
        masks2d="{masks2d}"
        clipseg_model_path="{clipseg_model_path}"
        clip_model_path="{clip_model_path}"
        model_package="{model_package}"
        prompts="{prompts}"
        erosion_size="{erosion_size}"
        threshold="{threshold}"
      />
      <Action
        ID="PublishMask2D"
        image="{image}"
        masks="{masks2d}"
        masks_visualization_topic="{masks_visualization_topic}"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Segment Image from No Negative Text Prompt Subtree">
      <input_port name="clip_model_path" default="models/clip.onnx" />
      <input_port name="clipseg_model_path" default="models/clipseg.onnx" />
      <input_port name="erosion_size" default="0" />
      <input_port
        name="masks_visualization_topic"
        default="/masks_visualization"
      />
      <input_port name="model_package" default="lab_sim" />
      <input_port name="prompts" />
      <input_port name="threshold" default="0.5" />
      <input_port name="topic_name" default="/wrist_camera/color" />
      <MetadataFields>
        <Metadata runnable="false" />
        <Metadata subcategory="Perception - ML" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
