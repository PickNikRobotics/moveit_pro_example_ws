<!-- UR5e inspired from https://github.com/google-deepmind/mujoco_menagerie/tree/main/universal_robots_ur5e -->
<mujoco model="dual arm robot scene"> <!-- <include file="ur5e.xml" />-->
  <include file="dual_arm_robot.xml"/>
  <include file="shelf.xml"/>
  <statistic center="0.3 0 0.4" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20" offwidth="1920" offheight="1080"/>
  </visual>
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <mesh name="cube" file="blender_cube.obj" scale="1 1 1" />
    <mesh name="cuboid" file="blender_cube.obj" scale="0.025 0.025 0.025" />
    <mesh name="april_tag" file="april_tag.obj" scale="4 4 4"/>
    <mesh name="april_tag_cuboid" file="april_tag.obj" scale="0.75 0.75 0.75"/>
    <texture type="2d" name="april_tag" file="assets/black_white.png" width="32" height="32"/>
    <material name="april_tag" texture="april_tag"/>
  </asset>
  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" pos="0 0 0" size="0 0 0.05" type="plane" material="groundplane"/>
  </worldbody>


  <worldbody>
    <body name="booth1" pos="3 0 0.5" euler="0.0 0.0 1.5707">
      <geom type="mesh" rgba="0.4 0.4 0.4 1" mesh="cube" />
      <geom type="mesh" pos="0.25 1 0" quat="1 -1 0 0" mesh="april_tag" material="april_tag" />
      <geom type="mesh" pos="-0.27 1 0" quat="1 -1 0 0" mesh="april_tag" material="april_tag" />
    </body>

    <body name="cuboid" pos="2.25 0 1.0" euler="0.0 0.0 1.5707">
      <freejoint />
      <geom type="mesh" size="0.0015 0.0015 0.0015" rgba="0 0.4 0 1" mesh="cuboid" />
      <geom type="mesh" pos="0 0.025 0" quat="1 -1 0 0" mesh="april_tag_cuboid" material="april_tag" />
    </body>

  </worldbody>

</mujoco>
