<!-- UR5e inspired from https://github.com/google-deepmind/mujoco_menagerie/tree/main/universal_robots_ur5e -->
<mujoco model="office scene">
  <include file="gen3_7dof.xml" />

  <option integrator="implicit">
    <flag multiccd="enable" />
  </option>

  <visual>
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="120" elevation="-20" offwidth="640" offheight="480" />
  </visual>

  <default>
    <geom friction=".5" solimp="0.9 0.97 0.001" solref=".005 1" />
    <joint solimplimit="0 0.99 0.01" solreflimit=".005 1" />
  </default>

  <asset>
    <texture name="rug_texture" type="2d" file="assets/rug.png" />
    <material name="rug" texture="rug_texture" texrepeat="1 1" />

    <texture name="table_texture" type="2d" file="assets/table_bake.png" />
    <material
      name="table"
      texture="table_texture"
      texrepeat="1 1"
      roughness="0.1"
    />
    <material
      name="T_mat"
      rgba="0 0.58823529 0.94117647 1.0"
      specular="0.0"
      shininess="0.0"
    />
    <material
      name="tape_mat"
      rgba="0.2 0.7 0.2 1.0"
      specular="0.0"
      shininess="0.0"
    />
  </asset>

  <statistic center="0.3 0 0.4" extent="0.8" />

  <asset>
    <texture
      type="skybox"
      builtin="gradient"
      rgb1="0.3 0.5 0.7"
      rgb2="0 0 0"
      width="512"
      height="3072"
    />
  </asset>
  <asset>
    <mesh name="table" file="table.obj" />
    <mesh name="floor" file="floor.obj" />
    <mesh name="tape" file="tape.obj" />
    <mesh name="T_collision_1" file="T_collision_1.obj" />
    <mesh name="T_collision_2" file="T_collision_2.obj" />
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="-1 -1 -1" directional="true" diffuse=".7 .7 .7" />

    <body name="scene" pos="0 0.38 -0.75">
      <geom type="mesh" mesh="floor" material="rug" />
      <geom
        type="mesh"
        pos="0 0 0.75"
        contype="0"
        conaffinity="0"
        mesh="table"
        material="table"
      />
      <geom
        type="box"
        size="0.55984 0.312652 0.0155825"
        pos="0 0 0.75"
        group="3"
      />
      <geom
        type="mesh"
        pos="0 0 0.75"
        contype="0"
        conaffinity="0"
        mesh="tape"
        material="tape_mat"
      />
    </body>
    <body pos="0 0.38 0.1">
      <freejoint />
      <geom density="200" type="mesh" mesh="T_collision_1" material="T_mat" />
      <geom density="200" type="mesh" mesh="T_collision_2" material="T_mat" />
    </body>
  </worldbody>
</mujoco>
