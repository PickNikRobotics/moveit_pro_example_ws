<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="Writing Demo">
  <!--//////////-->
  <BehaviorTree
    ID="Writing Demo"
    _description="Pick up a pen, draw a text on a flat surface, and place the pen back."
    _favorite="true"
  >
    <Control ID="Sequence" name="TopLevelSequence">
      <SubTree
        ID="Move to Waypoint (JTC)"
        _collapsed="true"
        acceleration_scale_factor="0.1"
        controller_action_server="/joint_trajectory_controller/follow_joint_trajectory"
        controller_names="joint_trajectory_controller"
        joint_group_name="manipulator"
        keep_orientation="false"
        keep_orientation_tolerance="0.05"
        link_padding="0.01"
        velocity_scale_factor="0.1"
        waypoint_name="Home"
        name="Move To Pen Location"
        seed="0"
      />
      <SubTree
        ID="Move to Waypoint (JTC)"
        _collapsed="true"
        acceleration_scale_factor="0.1"
        controller_action_server="/joint_trajectory_controller/follow_joint_trajectory"
        controller_names="joint_trajectory_controller"
        joint_group_name="manipulator"
        keep_orientation="false"
        keep_orientation_tolerance="0.05"
        link_padding="0.01"
        velocity_scale_factor="0.1"
        waypoint_name="Home"
        name="Move To Home Pose"
        seed="0"
      />
      <Control ID="Sequence">
        <Action
          ID="CreateStampedPose"
          reference_frame="fr3_link0"
          stamped_pose="{stamped_pose}"
          orientation_xyzw="-0.7073883;0.7068252;0.0000327;0.0000328"
          position_xyz="0.6;0.3;0.09"
        />
        <Action
          ID="VisualizePose"
          marker_lifetime="0.000000"
          marker_name="pose"
          marker_size="0.100000"
          pose="{stamped_pose}"
        />
        <SubTree
          ID="Write Text"
          _collapsed="true"
          file_path="moveitpro_loves_franka.yaml"
          bottom_right_corner="{stamped_pose}"
        />
        <SubTree
          ID="Wipe Text"
          _collapsed="true"
          bottom_right_corner="{stamped_pose}"
        />
      </Control>
      <SubTree
        ID="Move to Waypoint (JTC)"
        _collapsed="true"
        acceleration_scale_factor="0.1"
        controller_action_server="/joint_trajectory_controller/follow_joint_trajectory"
        controller_names="joint_trajectory_controller"
        joint_group_name="manipulator"
        keep_orientation="false"
        keep_orientation_tolerance="0.05"
        link_padding="0.01"
        velocity_scale_factor="0.1"
        waypoint_name="Home"
        seed="0"
      />
      <SubTree
        ID="Move to Waypoint (JTC)"
        _collapsed="true"
        acceleration_scale_factor="0.1"
        controller_action_server="/joint_trajectory_controller/follow_joint_trajectory"
        controller_names="joint_trajectory_controller"
        joint_group_name="manipulator"
        keep_orientation="false"
        keep_orientation_tolerance="0.05"
        link_padding="0.01"
        velocity_scale_factor="0.1"
        waypoint_name="Home"
        name="Move To Pen Holder"
        seed="0"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Writing Demo">
      <MetadataFields>
        <Metadata runnable="true" />
        <Metadata subcategory="Motion - Execute" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
