<?xml version='1.0' encoding='UTF-8'?>
<root BTCPP_format="4" main_tree_to_execute="Write Text">
  <!--//////////-->
  <BehaviorTree ID="Write Text" _description="Read a sequence of poses representing a text from a YAML file and draw the text on a flat surface using Cartesian planning." _favorite="true" _hardcoded="false">
    <Control ID="Sequence">
      <Action ID="CreateStampedPose" reference_frame="fr3_link0" position_xyz="0.6;0.3;0.09" orientation_xyzw="-0.7073883;0.7068252;0.0000327;0.0000328" stamped_pose="{stamped_pose}"/>
      <Decorator ID="Delay" delay_msec="500">
        <Control ID="Parallel" success_count="1" failure_count="1">
          <Action ID="PublishStaticFrame" pose="{stamped_pose}" child_frame_id="local" publish_rate="50"/>
          <Control ID="Sequence" name="TopLevelSequence">
            <Action ID="ActivateControllers" controller_names="joint_trajectory_controller"/>
            <Action ID="LoadPoseStampedVectorFromYaml" output="{pose_stamped_msgs}" file_path="{file_path}"/>
            <Control ID="Fallback">
              <Action ID="PlanCartesianPath" path="{pose_stamped_msgs}" planning_group_name="manipulator" position_only="false" blending_radius="0.000005" velocity_scale_factor="0.1" acceleration_scale_factor="0.05" trajectory_sampling_rate="100" joint_trajectory_msg="{joint_trajectory_msg}" debug_solution="{debug_solution}" ik_cartesian_space_density="0.01000" ik_joint_space_density="0.050000"/>
              <Action ID="WaitForUserTrajectoryApproval" solution="{debug_solution}" cartesian_path_links="grasp_link"/>
            </Control>
            <Action ID="VisualizePath" marker_lifetime="0.000000" path="{pose_stamped_msgs}"/>
            <Action ID="ExecuteFollowJointTrajectory" execute_follow_joint_trajectory_action_name="/joint_trajectory_controller/follow_joint_trajectory" joint_trajectory_msg="{joint_trajectory_msg}" goal_position_tolerance="0.000000" goal_time_tolerance="0.000000" goal_duration_tolerance="-1.000000"/>
          </Control>
        </Control>
      </Decorator>
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Write Text">
      <MetadataFields>
        <Metadata runnable="true"/>
        <Metadata subcategory="Motion - Execute"/>
      </MetadataFields>
      <inout_port name="file_path" default="{file_path}"/>
    </SubTree>
  </TreeNodesModel>
</root>
