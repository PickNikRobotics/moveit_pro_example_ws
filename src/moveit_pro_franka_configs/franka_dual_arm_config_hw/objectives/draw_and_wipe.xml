<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="Draw and Wipe">
  <!--//////////-->
  <BehaviorTree
    ID="Draw and Wipe"
    _description="Read a trajectory from a YAML file, draw it on a flat surface using Cartesian planning and then wipe it out."
    _favorite="false"
    _hardcoded="false"
  >
    <Control ID="Sequence">
      <SubTree
        ID="Draw"
        _collapsed="true"
        file_path="{file_path}"
        controller_name="joint_trajectory_controller"
        execute_follow_joint_trajectory_action_name="right/joint_trajectory_controller/follow_joint_trajectory"
        controller_switch_action_name="/right/controller_manager/switch_controller"
        planning_group_name="right_arm"
        tip_link="right_fr3_link8"
        center="{center}"
        name="Write a text"
      />
      <SubTree
        ID="Move Arms Home"
        _collapsed="true"
        name="Move both arms to home position"
      />
      <SubTree
        ID="Draw"
        _collapsed="true"
        file_path="wipe.yaml"
        controller_name="joint_trajectory_controller"
        execute_follow_joint_trajectory_action_name="left/joint_trajectory_controller/follow_joint_trajectory"
        controller_switch_action_name="/left/controller_manager/switch_controller"
        planning_group_name="left_arm"
        tip_link="left_fr3_link8"
        center="{center}"
        name="Wipe out the text"
      />
      <SubTree
        ID="Move Arms Home"
        _collapsed="true"
        name="Move both arms to home position"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Draw and Wipe">
      <MetadataFields>
        <Metadata runnable="false" />
        <Metadata subcategory="Motion - Execute" />
      </MetadataFields>
      <inout_port name="center" default="{center}" />
      <inout_port name="file_path" default="{file_path}" />
    </SubTree>
  </TreeNodesModel>
</root>
