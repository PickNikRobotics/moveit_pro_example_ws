<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="Navigate to Clicked Point">
  <!--//////////-->
  <BehaviorTree
    ID="Navigate to Clicked Point"
    _description="Navigate to a point clicked by the user in the UI"
    _favorite="true"
  >
    <Control ID="Sequence" name="TopLevelSequence">
      <Action
        ID="CreateStampedPose"
        reference_frame="base_link"
        stamped_pose="{start}"
      />
      <Action
        ID="SwitchController"
        activate_controllers="platform_velocity_controller_nav2"
        deactivate_controllers="velocity_force_controller;joint_trajectory_controller;platform_velocity_controller;servo_controller"
        activate_asap="true"
        automatic_deactivation="true"
        controller_list_action_name="/controller_manager/list_controllers"
        controller_switch_action_name="/controller_manager/switch_controller"
        strictness="1"
        timeout="-1.000000"
      />
      <Action
        ID="GetPoseFromUser"
        is_normal="true"
        pose_prompt="Click point on UI"
        user_pose="{goal}"
        view_name="Visualization"
      />
      <Action
        ID="AddPoseStampedToVector"
        input="{goal}"
        vector="{pose_stamped_vector}"
      />
      <Action
        ID="AdjustPoseWithIMarker"
        adjusted_poses="{final_poses}"
        initial_poses="{pose_stamped_vector}"
      />
      <Decorator
        ID="ForEach"
        index="{index}"
        out="{out}"
        vector_in="{final_poses}"
      >
        <Control ID="Sequence">
          <Action
            ID="ComputePathToPoseAction"
            action_name="/compute_path_to_pose"
            goal="{out}"
            ignore_stamp_time="true"
            path="{path}"
            planning_time="{planning_time}"
            start="{start}"
            timeout_sec="-1.000000"
            use_start="false"
            planner_id="GridBased"
          />
          <Action ID="WaitForUserPathApproval" path="{path}" />
          <Action
            ID="FollowPathAction"
            action_name="/follow_path"
            controller_id="FollowPath"
            distance_to_goal="{distance_to_goal}"
            goal_checker_id="general_goal_checker"
            path="{path}"
            speed="{speed}"
            timeout_sec="-1.000000"
          />
        </Control>
      </Decorator>
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Navigate to Clicked Point">
      <MetadataFields>
        <Metadata runnable="true" />
        <Metadata subcategory="Navigation" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
