<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="Tag Detection Integration Test">
  <!--//////////-->
  <BehaviorTree
    ID="Tag Detection Integration Test"
    _description=""
    _favorite="false"
  >
    <Control ID="Sequence" name="TopLevelSequence">
      <Action
        ID="LoadImageFromFile"
        frame_id="wrist_camera_optical_frame"
        image="{image}"
        file_path="/home/dwyackzan/moveit_pro_source/src/moveit_pro/moveit_studio_ws/moveit_pro_example_ws/src/lab_sim/objectives/apriltag_image.png"
      />
      <Action
        ID="LoadPoseStampedFromYaml"
        output="{expected_detection_pose}"
        file_path="expected_pose_detection.yaml"
      />
      <Action
        ID="GetCameraInfo"
        message_out="{camera_info}"
        timeout_sec="5.000000"
        topic_name="/wrist_camera/camera_info"
      />
      <Action
        ID="DetectAprilTags"
        apriltag_family_name="36h11"
        camera_info="{camera_info}"
        detections="{detections}"
        image="{image}"
        max_hamming="0"
        n_threads="1"
        quad_decimate="2.0"
        quad_sigma="0.0"
        refine_edges="true"
        tag_size="0.48"
      />
      <Action
        ID="GetDetectionPose"
        detection_pose="{detection_pose}"
        detections="{detections}"
        target_id="-1"
      />
      <Action
        ID="CalculatePoseOffset"
        destination_pose="{detection_pose}"
        source_pose="{expected_detection_pose}"
        source_to_destination_pose="{pose_diff}"
      />
      <Action
        ID="IsPoseNearIdentity"
        pose="{pose_diff}"
        position_tolerance="0.002"
        rotation_tolerance="0.006"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Tag Detection Integration Test">
      <MetadataFields>
        <Metadata runnable="true" />
        <Metadata subcategory="Application Test" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
