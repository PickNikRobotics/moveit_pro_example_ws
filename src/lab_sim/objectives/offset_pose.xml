<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="Offset Pose">
  <!--//////////-->
  <BehaviorTree ID="Offset Pose" _description="" _favorite="false">
    <Control ID="Sequence" name="TopLevelSequence">
      <Action
        ID="CreateStampedPose"
        reference_frame="world"
        stamped_pose="{original_pose}"
        position_xyz="0.05;0.05;0.5"
      />
      <Control ID="Fallback">
        <Decorator ID="Timeout" msec="50">
          <Action
            ID="PublishStaticFrame"
            child_frame_id="original_pose"
            pose="{original_pose}"
            publish_rate="50"
          />
        </Decorator>
        <Action ID="AlwaysSuccess" />
      </Control>
      <Action
        ID="CreateStampedPose"
        reference_frame="original_pose"
        stamped_pose="{offset_pose}"
        position_xyz="0.05;0.0;0.0"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="original_pose"
        marker_size="0.100000"
        pose="{original_pose}"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="offset_pose"
        marker_size="0.100000"
        pose="{offset_pose}"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Offset Pose">
      <MetadataFields>
        <Metadata runnable="true" />
        <Metadata subcategory="Application Test" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
