<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="AprilTag Detection Testing">
  <!--//////////-->
  <BehaviorTree
    ID="AprilTag Detection Testing"
    _description=""
    _favorite="false"
  >
    <Control ID="Sequence" name="TopLevelSequence">
      <Action
        ID="GetCameraInfo"
        message_out="{camera_info}"
        timeout_sec="5.000000"
        topic_name="/wrist_camera/camera_info"
      />
      <Action
        ID="GetImage"
        message_out="{image}"
        timeout_sec="5.000000"
        topic_name="/wrist_camera/color"
      />
      <Action
        ID="DetectAprilTags"
        image="{image}"
        camera_info="{camera_info}"
        detections="{detections}"
        apriltag_family_name="36h11"
        max_hamming="0"
        n_threads="1"
        quad_decimate="2.0"
        quad_sigma="0.0"
        refine_edges="true"
        tag_size="0.48"
      />
      <Action
        ID="GetDetectionPose"
        detection_pose="{detection_pose}"
        detections="{detections}"
        target_id="-1"
      />
      <Action
        ID="TransformPoseFrame"
        input_pose="{detection_pose}"
        output_pose="{detection_pose}"
        target_frame_id="world"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="pose"
        marker_size="0.100000"
        pose="{detection_pose}"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="AprilTag Detection Testing">
      <MetadataFields>
        <Metadata runnable="true" />
        <Metadata subcategory="Application Test" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
